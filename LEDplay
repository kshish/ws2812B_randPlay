#include <FastLED.h>
#define LED_PIN     7
#define NUM_LEDS    150
#define DELAY       33
#define MAX_LEDS_ON 17

long randR;
long randG;
long randB;
long randDelay;
long rand_LEDS_On;


CRGB leds[NUM_LEDS];
void setup() {
  FastLED.addLeds<WS2812, LED_PIN, GRB>(leds, NUM_LEDS);
  randomSeed(analogRead(0));
}

void loop() {
  randRGB();
  randDelay = random(DELAY);
  rand_LEDS_On = random(MAX_LEDS_ON);
  for (int i = 0 + rand_LEDS_On; i <= NUM_LEDS; i++) {
    leds[i] = CRGB ( randR, randG, randB);
    leds[NUM_LEDS-i] = CRGB (255-randR, 255-randG, 255-randB);
    FastLED.show();
    delay(randDelay);
    leds[i-rand_LEDS_On] = CRGB ( 0, 0, 0);
    leds[NUM_LEDS-i+rand_LEDS_On] = CRGB ( 0, 0, 0);
    
 }

 
}

void randRGB() {
  randR = random(256);
  randG = random(256);
  randB = random(256);
}
